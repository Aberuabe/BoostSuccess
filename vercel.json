{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(index|admin-login|admin-dashboard|payment)(\\.html)?",
      "dest": "/$1.html"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|pdf|svg|ico))$",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}